# 라즈베리파이 운영 환경 설정
BACKEND_URL=http://192.168.102.41:5001
DEVICE_ID=pi-01
ENVIRONMENT=production

# 낙상 감지 임계값 (0.0 ~ 1.0)
# 주의: 이 값은 낙상을 백엔드에 "보고"하는 임계값입니다
# 바운딩 박스 표시는 0.5(50%) 이상 신뢰도에서 자동으로 표시됩니다
CONFIDENCE_THRESHOLD=0.85  # 낙상 보고 임계값 (오탐 방지)

# 화면 표시 설정 (true/false)
# true: 모니터에 바운딩 박스 표시
# false: headless 모드 (화면 없이 실행)
ENABLE_DISPLAY=true
